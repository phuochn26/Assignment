@model Person
@{
    ViewData["Title"] = "Edit Rookies";
}

<div>
    <h3 class="d-inline-block">Rookie Detail</h3>
    <a href="@Url.ActionLink("Index","Rookies")" class="btn btn-primary float-right">Back to list</a>
</div>
<div class="row">
    <div class="col-12">
            <div class="form-horizontal">
                <div class="form-group col-12">
                    <label class="control-label">Full Name</label>
                    <label class="form-control">@Html.ValueFor(model => model.LastName) @Html.ValueFor(model => model.FirstName)</label>
                </div>
                <div class="form-group col-12">
                    @Html.LabelFor(model => model.Gender, htmlAttributes: new { @class = "control-label" })
                    <label class="form-control">@Html.ValueFor(model => model.Gender)</label>
                </div>

                <div class="form-group col-12">
                    @Html.LabelFor(model => model.DateOfBirth, htmlAttributes: new { @class = "control-label" })
                    <label class="form-control">@Html.ValueFor(model => model.DateOfBirth)</label>
                </div>

                <div class="form-group col-12">
                    @Html.LabelFor(model => model.Email, htmlAttributes: new { @class = "control-label" })
                    <label class="form-control">@Html.ValueFor(model => model.Email)</label>
                </div>

                <div class="form-group col-12">
                    @Html.LabelFor(model => model.PhoneNumber, htmlAttributes: new { @class = "control-label" })
                    <label class="form-control">@Html.ValueFor(model => model.PhoneNumber)</label>
                </div>
                <div>
                    <a href="@Url.ActionLink("Delete","Rookies")/@Model.Id" class="btn btn-danger btn-sm" role="button" aria-pressed="true">Delete</a>
                </div>
            </div>
    </div>
</div>